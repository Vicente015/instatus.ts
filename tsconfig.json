{
  "compilerOptions": {
    "lib": [
      "es2019",
      "es2020.promise",
      "es2020.bigint",
      "es2020.string"
    ],
    "strict": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "target": "es5",
    "outDir": "lib",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "declaration": true,
    "removeComments": false,
    "strictNullChecks":  true
  },
  "include": ["**/*"],
  "exclude": [
    "node_modules",
    "dist",
    "lib",
    "scripts",
    "docs",
    "examles",
    "test",
    "testing"
  ]
}