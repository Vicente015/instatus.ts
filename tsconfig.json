{
  "compilerOptions": {
    "lib": [
      "es2019",
      "es2020.promise",
      "es2020.bigint",
      "es2020.string"
    ],
    "strict": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "target": "es5",
    "outDir": "dist",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "declaration": true,
    "removeComments": false,
    "strictNullChecks":  true
  },
  "include": ["src/**/*.ts"]
}